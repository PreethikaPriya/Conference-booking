<%= form_for @building do |f| %>
<% if @building.errors.any? %>
 	<h2> These errors prohibited the form from being saved </h2>
 	<ul style="color:red;">
 	<% @building.errors.full_messages.each do |msg| %>
 		<li> <%= msg %> </li>
 	<% end %>
 	</ul>
<% end %>
<% end %>

<%= form_for @building do |f| %>
	
	<div class="form-group">
	<label> Block </label> <br/>
	<%= f.text_field :name, class:"form-control"%> <br/>
	</div>

	<div class="form-group">
	<label> Block Code</label> <br/>
	<%= f.text_field :code, class:"form-control"%> <br/>
	</div>

	<div class="form-group">
	<label> Landmark </label> <br/>
	<%= f.text_field :landmark, class:"form-control"%> <br/>
	</div>

	<%= f.submit "Submit",class:"btn btn-primary" %> or <%= link_to "Back",buildings_path %>

<% end %>

